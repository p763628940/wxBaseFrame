.messagebox{
  width: 750rpx;
  height: auto;
}
.messagetit{
  width: 750rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  align-items: center;
  display: flex;
  justify-content: space-between;
  height: 90rpx;
  line-height: 90rpx;
}
.messagetitl{
  display: flex;
  align-items: center;
}
.titl_icon1{
  width:29rpx;
  height:33rpx;
  margin-right: 35rpx;
}
.titl_icon1_text{
  font-size:30rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height: 90rpx;
}
.messagetitr{
  display: flex;
  align-items: center;
}
.titl_icon2{
  width: 25rpx;
  height: 27rpx;
  margin-right: 23rpx;
}
.titl_icon2_text{
  font-size:24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height: 90rpx;
}
.bg{
  width: 750rpx;
  height: 16rpx;
  background:rgba(244,244,244,1);
}
.message_item{
  width: 750rpx;
  box-sizing: border-box;
  height: auto;
  padding-left: 30rpx;
  padding-right: 40rpx;
  padding-bottom: 44rpx;
  border-bottom: 1px solid rgb(229, 229, 229);
  padding-top: 32rpx;
}


.ms_item_tit{
  display: flex;
  align-items: center;
  height: 50rpx;
  line-height: 50rpx;
}

.ms_item_titl{
  font-size:36rpx;
  font-weight:600;
  color:rgba(51,51,51,1);
  display: flex;
  align-items: center;
}
.ms_item_titl_dian{
  width:12px;
  height:12px;
  background:rgba(253,104,125,1);
  border-radius: 6rpx;
  margin-left: 9rpx;
}
.ms_item_titr{
  width:12rpx;
  height:12rpx;
  background:rgba(253,104,125,1);
  border-radius: 6rpx;
  margin-left: 9rpx;
}
.ms_item_con{
  margin-top: 16rpx;
  display: flex;
  justify-content: space-between;
  height: 88rpx;
  align-items: center;
}
.ms_item_conr{
  align-items: center;
  width:589rpx;
  height:88rpx;
  font-size:30rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;

}
.time{
  width: 100%;
  padding-left: 90rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  margin-top: 12rpx;
}
.timel{
  height:24rpx;
  font-size:26rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:24rpx;
}
.timer{
  height:26rpx;
  font-size:32rpx;
  font-weight:600;
  color:rgba(255,123,0,1);
  line-height:26rpx;
}
.ms_item_conl{
  width:70rpx;
  height:70rpx;
  border-radius: 35rpx;
}

scroll-view{
  display: -webkit-box;
  -webkit-box-flex: 1;
}
.notmore {

  width:100%;
  height:50rpx;
