.ul {
  width: 100%;
  margin: 0 auto;
}
.li_box{
  width: 688rpx;
  margin: 0 auto;
  border-bottom: 1rpx solid #e5e5e5;
  font-size: 34rpx;
  color: rgba(51, 51, 51, 1);
  line-height: 96rpx;
}
.li {
  width: 631rpx;
  display: flex;
  justify-content: space-between;
  font-size: 34rpx;
  color: rgba(51, 51, 51, 1);
  line-height: 96rpx;
}
.rigth_tap{
  position: absolute;
  right: 0;
  top: 20%;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  width: 50rpx;
}
.rigth_item{
  width: 30rpx;
  height: 33rpx;
  padding-left: 10rpx;
  font-size:24rpx;
  font-weight:600;
  color:rgba(63,134,255,1);
  line-height:33rpx;
  margin-top: 2rpx;
  text-align: center;

}
.li_title{
  font-size: 36rpx;
  color: #333333;
  height: 60rpx;
  padding-left: 30rpx;
  width: 720rpx;
  background:rgba(239,240,246,1);
  line-height: 60rpx;
  border-bottom: none;
  margin-top: -1rpx;
}

scroll-view{
  width: 100%;
  height: 600rpx;
}

.bg_red{

  transition:100ms;
  font-size: 28rpx;
}