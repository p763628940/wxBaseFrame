.bg{
    width:750rpx;
    height:16rpx;
    background:rgba(244,244,244,1);
}
.info{
    width:667rpx;
    height:148rpx;
    background:linear-gradient(315deg,rgba(110,110,121,1) 0%,rgba(64,66,83,1) 100%);
    border-radius:30rpx 30rpx 0rpx 0rpx;
    margin: 0 auto;
    margin-top: 20rpx;
    display: flex;
    align-items: center;
}
.info_face{
    width: 90rpx;
    height: 90rpx;
    border-radius: 45rpx;
    margin-left: 38rpx;

}
.useInfo{
    height: 90rpx;
    margin-left: 23rpx;

}
.useInfo_t{
    display: flex;
    align-items: center;

}
.name{
    font-size:32rpx;
    font-weight:500;
    color:rgba(255,255,255,1);
    line-height:46rpx;
}
.phone{
    font-size:30rpx;
    font-weight:400;
    color:rgba(255,255,255,1);
    line-height:42rpx;
    margin-left: 18rpx;
}
.arrow{
    width:9rpx;
    height:16rpx;
    margin-left: 9rpx;
}
.message{
    font-size:24rpx;
    font-weight:400;
    color:rgba(167,167,167,1);
    line-height:33rpx;
    margin-top: 8rpx;
}
.useInfo_under{
    width: 750rpx;
    height: 156rpx;
    justify-content: space-around;
    display: flex;
    margin-top: 30rpx;
}
.useInfo_under_item{
    text-align: center;
    width: 30%;
}
.useInfo_under_item_t{
    width: 100%;
    font-size:34rpx;
    font-weight:500;
    color:rgba(51,51,51,1);
    line-height:48prx;
}
.useInfo_under_item_b{
    width: 100%;
    margin-top:10rpx ;
    font-size:26rpx;
    font-weight:400;
    color:rgba(153,153,153,1);
    line-height:37rpx;

}
.info_list{
    width: 750rpx;
    box-sizing: border-box;
}
.info_list_item{
    padding-top: 44rpx;
    display: flex;
}
.info_list_item_l{
    width:12rpx;
    height:33rpx;
    background:rgba(84,88,255,1);
}
.info_list_item_r{
    margin-left: 31rpx;
}
.info_list_item_r_t{
    width:667rpx;
    font-size:30rpx;
    font-weight:400;
    color:rgba(102,102,102,1);
    line-height:44rpx;
}
.info_list_item_r_b{
    display: flex;
    justify-content: space-between;
    margin-top: 30rpx;
    align-items: center;
}
.info_list_item_r_bl{
    font-size:26rpx;
    font-weight:400;
    color:rgba(153,153,153,1);
    line-height:24rpx;
}
.info_list_item_r_br{
    font-size:32rpx;
    font-weight:600;
    color:rgba(255,123,0,1);
    line-height:45rpx;
}
.info_list_item_r{
    border-bottom: 1rpx solid rgba(229,229,229,1);
    padding-bottom: 44rpx;
}
.info_list_item_l_box{
    height: 44rpx;
    display: flex;
    align-items: center;
}
.box{
    box-sizing: border-box;
    display: flex;
    flex-direction: column;

}
