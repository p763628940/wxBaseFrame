  background: url('https://aimall.zhongyuanib.com/static/ai/active/videoMini/card_bg1.png') no-repeat;
  background-size: 100%;
  z-index: 1;
  height: 100%;
}

.card_date_bg2 {
  background: url('https://aimall.zhongyuanib.com/static/ai/active/videoMini/card_bg4.png') no-repeat;
  background-size: 100%;
