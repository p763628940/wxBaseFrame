.container {
  width: 100%;
}

.top_banner {
  width: 100%;
  height: 286rpx;
  background: url("https://xiaoaires.aibao.com/commissionReturn/personal/pb_login_banner.png") no-repeat;
  background-size: cover;
}

.top_head {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.top_head>image {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-top: 56rpx;
}

.top_head_p {
  font-size: 36rpx;
  color: rgba(255, 255, 255, 1);
  margin-top: 30rpx;
}

form {
  width: 100%;
  margin: 0 auto;
}

.form_ul {
  width: 590rpx;
  margin: 56rpx auto 0;
}

.form_ul_li {
  width: 590rpx;
  height: 126rpx;
  line-height: 126rpx;
  border-bottom: 1rpx solid #e5e5e5;
  position: relative;
  display: inline-flex;
  align-content: center;
  align-items: center;
}

.li_tit {
  width: 170rpx;
  min-width: 170rpx;
}

.li_input {
  flex: 2;
}

.li_verify {
  flex: 1;
}

.li_verify button {
  position: absolute;
  right: 0;
  top: 0;
  min-width: 150rpx;
  color: #4b8dfa;
  font-size: 28rpx;
  background: none;
  border: 0;
  border-radius: 0;
  line-height: 128rpx;
}

.li_tit, .li_input input {
  font-size: 32rpx;
  color: #333;
  background: transparent;
}

/* 同意协议 */

.agree {
  width: 100%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
}

.agree>view {
  padding: 40rpx 0;
}

.agree_checkbox {
  display: inline-block;
}

.agree_checkbox image {
  width: 26rpx;
  height: 26rpx;
}

.agree_con {
  display: flex;
  align-items: center;
  margin-left: 8rpx;
}

.agree_con_p {
  font-size: 24rpx;
  color: #999;
  line-height: 38rpx;
}

.agree_con_span {
  color: #4b8dfa;
  font-size: 24rpx;
  line-height: 38rpx;
}

