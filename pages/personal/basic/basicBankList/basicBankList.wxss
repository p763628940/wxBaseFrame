/* 密码弹窗 */
@import '/components/password/password';
page{
  width:100%;
  background: #f4f4f4;
}
.bank_list {
  width: 690rpx;
  margin: 0 auto;
}

.bank_list_ul {
  width: 630rpx;
  margin: 40rpx auto 0;
  height: 179rpx;
  background: linear-gradient(143deg, rgba(255, 140, 98, 1) 0%, rgba(246, 74, 74, 1) 100%);
  border-radius: 10rpx;
  padding: 30rpx;
  position: relative;
}

.bank_list_li {
  position: relative;
  z-index: 5;
}

.li_one {
  width: 100%;
  display: inline-flex;
  justify-content: space-between;
  align-content: center;
}

.bank_left {
  display: inline-flex;
  align-content: center;
  align-items: center;
}

.bank_logo {
  width: 60rpx;
  height: 60rpx;
  border: 1rpx solid #fff;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
  background: #fff;
}

.bank_logo image {
  width: 60rpx;
  height: 60rpx;
  background: #fff;
}

.bank_name_h {
  font-size: 42rpx;
  color: #fff;
  line-height: 32rpx;
  font-weight: bold;
}

.bank_name_p {
  font-size: 30rpx;
  color: rgba(255, 253, 253, 0.8);
  line-height: 32rpx;
  margin-top: 22rpx;
}

.bank_btn {
  width: 115rpx;
  height: 50rpx;
  border-radius: 25rpx;
  border: 1rpx solid #fff;
  font-size: 26rpx;
  color: #fff;
  line-height: 46rpx;
  overflow: hidden;
  text-align: center;
}

.li_two {
  margin: 30rpx 60rpx 0 80rpx;
  display: flex;
  text-align: center;
}

.li_two view {
  font-size: 30rpx;
  color: #fff;
  line-height: 32rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
}

.li_two_num {
  margin-top: 8rpx;
}

.bank_list_ul > image {
  width: 690rpx;
  height: 239rpx;
  position: absolute;
  top: 0;
  left: 0;
}
