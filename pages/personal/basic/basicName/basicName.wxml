<view class="container">
  <view class="info_form">
    <view class='info_form_ul'>
      <view class='info_form_li'>
        <view class='li_tit'>昵称</view>
        <view class='li_input'>
          <input type='text' placeholder="请输入昵称" placeholder-class='placeholder' maxlength='15' value='{{nickName}}' bindinput='nameWatch'></input>
        </view>
        <view class="li_close" wx:if="{{closeBtn}}" bindtap="closeBtnClick">
          <image src='{{error}}'></image>
        </view>
      </view>
    </view>
    <view class="info_btn">
      <button class="btn_bg wh69 mt70" disabled="{{disabled}}" bindtap="handleNickName">确定</button>
    </view>
  </view>
</view>