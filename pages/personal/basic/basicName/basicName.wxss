page {
  width: 100%;
  background: #f4f4f4;
}

.info_form {
  width: 100%;
  margin-top: 20rpx;
}

.info_form_ul {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
}

.info_form_li {
  width: 720rpx;
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  position: relative;
  padding: 0 0 0 30rpx;
  display: flex;
  align-content: center;
  align-items: center;
}

.info_form_li>view {
  font-size: 30rpx;
  color: rgba(51, 51, 51, 1);
}

.li_tit {
  min-width: 120rpx;
  margin-right: 40rpx;
}

.li_input {
  flex: 2;
  font-size: 30rpx;
  color: rgba(51, 51, 51, 1);
  height: 100rpx;
  line-height: 100rpx;
}

.li_input input {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  color: rgba(51, 51, 51, 1);
}

.li_close {
  width: 36rpx;
  height: 36rpx;
  padding: 32rpx 30rpx;
}

.li_close image {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
}

.li_verify {
  flex: 1;
}

.li_verify button {
  position: absolute;
  right: 0;
  top: 0;
  min-width: 150rpx;
  color: #4b8dfa;
  font-size: 28rpx;
  background: none;
  border: 0;
  border-radius: 0;
  line-height: 100rpx;
}
