.container {
  width: 100%;
  border-top: 1rpx solid #e5e5e5;
}

.introduce_tit {
  width: 670rpx;
  margin: 38rpx 40rpx 0;
  position: relative;
  text-align: left;
}

.tit_h {
  font-size: 36rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 32rpx;
  position: relative;
  z-index: 2;
}

.tit_span {
  width: 400rpx;
  height: 16rpx;
  background: rgba(236, 243, 255, 1);
  position: absolute;
  bottom: -10rpx;
  left: 0;
  z-index: 1;
}

.info_btn {
  position: fixed;
  bottom: 66rpx;
}

.introduce_list {
  width: 690rpx;
  margin: 0 20rpx 0 40rpx;
}

.introduce_list_ul {
  margin-top: 36rpx;
  display: flex;
  align-items:flex-start;
}

.introduce_list_span {
  width: 12rpx;
  height: 12rpx;
  min-width: 12rpx;
  min-height: 12rpx;
  background: rgba(121, 171, 255, 1);
  border-radius: 50%;
  overflow: hidden;
  margin-right: 8rpx;
  margin-top: 14rpx;
}

.introduce_list_li, .introduce_list_li view {
  font-size: 26rpx;
  color: rgba(102, 102, 102, 1);
  display: flex;
  align-items: center;
}

.introduce_list_p {
  color: #3F86FF;
}
