<view class="container">
  <!--填写认证消息-->
  <view class="top_banner top_banner1">
    <view class="status_img">
      <image src='{{status}}'></image>
      <view>认证成功后，即可推广赚奖励</view>
    </view>
  </view>
  <view class="tip_msg">请填写您的真实信息，否则将会影响推广及提现，我们将会严格保护您的个人信息。</view>
  <!--认证填写信息-->
  <view class="info_form">
    <view class='info_form_ul'>
      <view class='info_form_li'>
        <view class='li_tit'>真实姓名</view>
        <view class='li_input'>
          <input type='text' placeholder="请输入真实姓名" placeholder-class='placeholder' value='{{idName}}' bindinput='nameWatch'></input>
        </view>
      </view>
    </view>
    <view class='info_form_ul'>
      <view class='info_form_li'>
        <view class='li_tit'>身份证号</view>
        <view class='li_input'>
          <input type='text' placeholder="请输入身份证号码" placeholder-class='placeholder' maxlength='18' value='{{idNo}}' bindinput='cardWatch'></input>
        </view>
      </view>
    </view>
  </view>
  <!--按钮-->
  <view class="info_btn mt70">
    <button class="btn_bg wh69" disabled="{{disabled}}" bindtap="btnclick">确认信息无误，下一步</button>
  </view>
</view>