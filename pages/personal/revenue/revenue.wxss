page {
  background: #F4F4F4;
}

.revenue_top {
  width: 100%;
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
  background: #fff;
  position: fixed;
  top:0;
  left: 0;
  z-index: 100;
}

.revenue_top_ul {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.revenue_top_li {
  width: 33.3%;
  text-align: center;
  position: relative;
  line-height: 88rpx;
}

.revenue_top_li image {
  width: 22rpx;
  height: 12rpx;
  display: inline-block;
  position: absolute;
  right: 30rpx;
  top: 40rpx;
}

.revenue_picker {
  font-size: 30rpx;
  color: rgba(153, 153, 153, 1);
}

.revenue_top_li.active .revenue_picker {
  color: #5458ff;
}

.revenue_top_li.active .revenue_top_span {
  width: 40rpx;
  height: 8rpx;
  background: #5d5aef;
  border-radius: 3rpx;
  overflow: hidden;
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -20rpx;
}

/* 累计收入 */

.revenue_total {
  width: 670rpx;
  font-size: 26rpx;
  color: #666;
  line-height: 37rpx;
  padding: 22rpx 40rpx;
  text-align: left;
  background: #F4F4F4;
  position: fixed;
  top:88rpx;
  left: 0;
  z-index: 100;
}
