/* 列表 */

.revenue_list {
  width: 100%;
  /* margin-bottom: 38rpx; */
  padding-top: 165rpx;
}

.revenue_list_ul {
  position: relative;
}

.revenue_list_li {
  background: #fff;
  padding: 40rpx 0;
  margin-bottom: 20rpx;
  position: relative;
}

.list_top {
  /* display: -webkit-box;
  -webkit-box-pack: justify;
  -webkit-box-align: center; */
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  border-bottom: 1rpx solid #e5e5e5;
  padding: 0 40rpx 26rpx;
}

.list_tit {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  line-height: 40rpx;
}

.list_p {
  font-size: 26rpx;
  color: #666;
  line-height: 37rpx;
  padding-top: 17rpx;
}

.list_top_right {
  text-align: right;
}

.revenue_price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff7b00;
  line-height: 45rpx;
}

.revenue_status {
  font-size: 24rpx;
  color: #666;
  line-height: 33rpx;
  padding-top: 14rpx;
}

.blue_status {
  color: #4b8dfa;
}

.red_status {
  color: #f5524d;
}

.list_bottom {
  padding: 18rpx 40rpx 0;
}

.list_bottom>view {
  display: -webkit-box;
  -webkit-box-align: center;
  padding-top: 12rpx;
}

.list_bottom_p {
  min-width: 140rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 40rpx;
}

.list_bottom_span {
  font-size: 28rpx;
  color: #333;
  line-height: 40rpx;
  display: block;
}

.color_block {
  width: 12rpx;
  height: 33rpx;
  background: #5458ff;
  position: absolute;
  top: 40rpx;
  left: 0;
}
