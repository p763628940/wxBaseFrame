.con {
  width: 630rpx;
  padding: 57rpx 60rpx;
  background: #fff;
  margin: 0 auto;
}

.con .image {
  text-align: center;
}

.con image {
  width: 122rpx;
  height: 122rpx;
  border-radius: 50%;
  overflow: hidden;
  vertical-align: middle;
  display: inline-block;
}

.con .h1 {
  font-size: 36rpx;
  color: #333;
  text-align: center;
  padding-top: 13rpx;
  font-weight: bold;
}

.con .p {
  font-size: 26rpx;
  color: #666;
  text-align: center;
  padding-top: 16rpx;
}

.con .msg {
  font-size: 28rpx;
  color: #666;
  text-align: justify;
  padding-top: 33rpx;
}

