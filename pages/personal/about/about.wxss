.con2 {
  width: 630rpx;
  padding: 65rpx 60rpx 54rpx;
  background: #fff;
  margin: 0 auto;
  border-top: 20rpx solid #f4f4f4;
}

.con2 .h1 {
  font-size: 36rpx;
  color: #333;
  text-align: left;
  font-weight: bold;
  margin-bottom: 54rpx;
}
.con2 .h1 image{
  width: 62rpx;
  height: 28rpx;
  vertical-align: middle;
  margin-left: 16rpx;
}
.con2 .ul{
  overflow: hidden;
  display: inline-flex;
  align-items: center;
  justify-content: space-between;
}
.con2 .ul .li {
  margin: 15rpx 10rpx;
  /* float: left; */
}

.con2 .ul .li image {
  /* width: 262rpx;
  height: 102rpx; */
  width: 290rpx;
  height: 106rpx;
  vertical-align: middle;
}

