.con3 {
  width: 630rpx;
  padding: 47rpx 60rpx 55.5rpx;
  background: #fff;
  margin: 0 auto;
  border-top: 20rpx solid #f4f4f4;
}

.con3 .h1 {
  font-size: 36rpx;
  color: #333;
  text-align: left;
  font-weight: bold;
  padding-bottom: 31rpx;
}
.con3 .h1 image{
  width: 62rpx;
  height: 28rpx;
  vertical-align: middle;
  margin-left: 16rpx;
}
.con3 .ul .li {
  font-size: 28rpx;
  color: #333;
  padding: 21rpx 0;
  border-bottom: 1px dashed #e5e5e5;
}
.con3 .ul .li:last-child{
  border-bottom: none;
}
.con3 .ul .li>view {
  color: #0274c7;
  display: inline-block;
}

.con3 .ol {
  display: inline-flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 25rpx;
}

.con3 .ol image {
  width: 177rpx;
  height: 177rpx;
  vertical-align: middle;
  margin-right: 46rpx;
}

.con3 .ol .p {
  font-size: 28rpx;
  color: #666;
}
