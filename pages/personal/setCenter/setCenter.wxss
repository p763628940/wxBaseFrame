page {
  background: #f4f4f4;
  margin-bottom: 140rpx;
}

.container {
  width: 100%;
  height: auto;
  background: #fff;
}

/* 热词滚动 */

.prompt {
  width: 96%;
  margin-right: 4%;
  height: 70rpx;
  background: #f5f9ff;
  display: inline-flex;
  align-content: center;
  justify-content: space-between;
  overflow: hidden;
}

.prompt_marquee {
  width: 81%;
  overflow: hidden;
  position: relative;
}

.marquee_li {
  width: 200%;
  position: absolute;
  overflow: hidden;
  /* animation: marquee 5s linear infinite; */
  display: inline-flex;
}

.marquee_li_p {
  width: 50%;
  font-size: 28rpx;
  color: #5458ff;
  line-height: 70rpx;
  margin-left: 30rpx;
}

.prompt_btn {
  display: block;
  /* width: 18%; */
  width: 115rpx;
  height: 44rpx;
  line-height: 40rpx;
  background: #f5f9ff;
  border-radius: 22rpx;
  border: 1.5rpx solid #5458ff;
  text-align: center;
  margin-top: 13rpx;
  overflow: hidden;
  font-size: 26rpx;
  color: #5458ff;
}

@keyframes marquee {
  0% {
    left: 0;
  }

  100% {
    left: -100%;
  }
}

/* 个人信息状态 */

.top_con {
  width: 750rpx;
  background: url("https://xiaoaires.aibao.com/commissionReturn/personal/ps_bg.png") no-repeat;
  background-size: 100%;
  height: 313rpx;
  position: relative;
}

.con_banner {
  width: 92%;
  position: absolute;
  top: 32rpx;
  left: 0;
  margin-left: 4%;
  margin-right: 4%;
  display: flex;
  align-items: center;
  align-content: center;
  justify-content: space-between;
}

.info_left {
  display: flex;
  align-items: center;
}

.info_head {
  width: 110rpx;
  height: 110rpx;
  min-width: 110rpx;
  min-height: 110rpx;
  border-radius: 50%;
  overflow: hidden;
  padding: 0;
  margin-right: 40rpx;
  background: url('https://xiaoaires.aibao.com/commissionReturn/icon/head.png') no-repeat;
  background-size: 100%;
}

.info_head image {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  overflow: hidden;
}

.msg_name {
  color: #fff;
  display: flex;
  align-items: center;
}

.name_span {
  max-width: 240rpx;
  /* margin-right: 12rpx; */
  display: block;
  font-size: 38rpx;
  line-height: 46rpx;
  font-weight: 500;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.msg_sign {
  padding: 5rpx 20rpx;
  background: #3f43dd;
  border-radius: 29rpx;
  margin-left: 12rpx;
  display: flex;
  align-items: center;
}

.msg_sign image {
  width: 28rpx;
  height: 28rpx;
  margin-top: 5rpx;
  margin-right: 8rpx;
}

.msg_sign view {
  font-size: 24rpx;
  font-weight: 500;
  color: #fff;
  line-height: 38rpx;
}

.sign_on {
  background: linear-gradient(90deg, rgba(250, 152, 63, 1) 0%, rgba(250, 82, 63, 1) 100%);
}

.infor_right {
  width: 12rpx;
  height: 22rpx;
  display: inline-block;
  justify-content: right;
}

/* 体现，结算，累计收入 */

.con_menu {
  background: #fff;
  box-shadow: 0px 6rpx 10rpx 0rpx rgba(36, 121, 230, 0.1);
  border-radius: 10rpx;
  width: 92%;
  height: 180rpx;
  overflow: hidden;
  position: absolute;
  top: 184rpx;
  left: 4%;
  right: 4%;
}

.menu_ul {
  width: auto;
  display: flex;
  text-align: center;
  justify-content: space-between;
  margin-top: 40rpx;
}

.menu_li {
  line-height: 35rpx;
  border-radius: 0;
  flex: 1;
  background: none;
  border: 0;
  overflow: hidden;
}

.menu_li_box {
  line-height: 35rpx;
  border-radius: 0;
  flex: 1;
  background: none;
  border: 0;
  overflow: hidden;
}

.menu_li_yuan {
  font-size: 38rpx;
  color: #333;
  line-height: 53rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.menu_li_name {
  font-size: 26rpx;
  color: #999;
  line-height: 40rpx;
  margin-top: 7rpx;
}

/* 个人列表 */

.con_list {
  width: 100%;
}

.list_ul {
  width: 96%;
  margin-left: 4%;
}

.list_ul_li {
  width: 96%;
  /* padding: 22rpx 4% 22rpx 0; */
  padding-right: 4%;
  height: 100rpx;
  display: inline-flex;
  align-items: center;
  justify-content: space-between;
  line-height: 42rpx;
  border-radius: 0;
  background: #fff;
}

.li_left {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.li_left image {
  width: 50rpx;
  height: 51rpx;
  vertical-align: middle;
  margin-right: 30rpx;
}

.li_left_p {
  font-size: 30rpx;
  color: #333;
  margin-top: 4rpx;
}

.li_right {
  display: flex;
  align-items: center;
}

.li_right view {
  font-size: 28rpx;
  color: rgba(153, 153, 153, 1);
}

.li_right image {
  width: 12rpx;
  height: 22rpx;
  min-width: 12rpx;
  min-height: 22rpx;
  vertical-align: middle;
  margin-left: 15rpx;
}

.line {
  border-bottom: 1rpx solid #e5e5e5;
}

.li_right .color_orange {
  color: #ff801a;
}
