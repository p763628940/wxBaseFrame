.draw_top {
  width: 670rpx;
  padding: 22rpx 40rpx;
  background: #f9f9f9;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
}

.draw_top_tit {
  font-size: 26rpx;
  color: #666;
  line-height: 37rpx;
}

.draw_top_screen {
  display: flex;
  align-items: center;
  align-content: center;
}

.draw_top_screen view {
  font-size: 28rpx;
  color: #4b8dfa;
  line-height: 40rpx;
}

.draw_top_screen image {
  width: 25rpx;
  height: 27rpx;
  vertical-align: middle;
  margin-right: 14rpx;
}

