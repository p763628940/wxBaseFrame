/* 密码弹窗 */

.modal_mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal_dialog {
  width: 540rpx;
  height: 446rpx;
  overflow: hidden;
  position: fixed;
  top:196rpx;
  left: 50%;
  z-index: 9999;
  background: #f9f9f9;
  margin: 0 -270rpx;
  border-radius: 20rpx;
}

.modal_top {
  /* display: flex;
  align-items: center;
  justify-content: space-between; */
  padding: 30rpx 0;
  border-bottom: 1rpx solid #e5e5e5;
}

.modal_title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  line-height: 50rpx;
  text-align: center;
}

.modal_top image {
  width: 22rpx;
  height: 22rpx;
  display: inline-block;
  padding: 14rpx 32rpx;
  position: absolute;
  top: 32rpx;
  right: 0;
}

.modal_content {
  padding: 30rpx 25rpx 0;
}

.modal_input {
  width: 490rpx;
  height: 85rpx;
  background: rgba(244, 244, 244, 1);
  display: flex;
}

.input {
  flex: 1;
  padding: 0 22rpx;
  box-sizing: border-box;
  width: 446rpx;
  height: 85rpx;
  line-height: 85rpx;
  font-size: 32rpx;
  color: #333;
  border: none;
  background: rgba(244, 244, 244, 1);
}

input_holder {
  color: #666;
  font-size: 28rpx;
}

.modal_forget {
  font-size: 26rpx;
  color: rgba(75, 141, 250, 1);
  text-align: right;
  padding: 15rpx 0;
}
.btn_bg {
  width: 590rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: rgba(84, 88, 255, 1);
  border-radius: 90rpx;
  text-align: center;
  font-size: 34rpx;
  color: rgba(255, 255, 255, 1);
  padding: 0;
}
.modal_footer {
  margin-top: 36rpx;
}

.btn_confirm {
  width: 460rpx;
  margin: 0 40rpx;
}