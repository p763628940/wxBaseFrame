.kefu_img {
  position: fixed;
  right: 40rpx;
  z-index: 10;
  /* bottom: 50rpx; */
  bottom: 10%;
  width: 100rpx;
  height: 140rpx;
  border-radius: 50%;
  text-align: center;
  margin: 0 auto;
}

.kefu_img image {
  display: block;
  width: 88rpx;
  height: 88rpx;
  margin-left: 6rpx;
}

.kefu_img .p {
  font-size: 24rpx;
  color: rgba(102, 102, 102, 1);
  margin-top: 11rpx;
}

/*  */

.dialog_pop {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 20;
  background: rgba(0, 0, 0, 0.5);
  overflow: hidden;
}

.pop_bg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  overflow: hidden;
  z-index: 100;
}

.pop_con {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  /* padding: 30rpx 88rpx 21rpx; */
  z-index: 100;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.pop_con_close {
  padding: 30rpx 40rpx;
  position: absolute;
  top: 0;
  right: 0;
}

.pop_con_close image {
  width: 28rpx;
  height: 28rpx;
  display: block;
}

.dialog_code {
  text-align: center;
  padding-bottom: 43rpx;
}

.dialog_code image {
  width: 244rpx;
  height: 244rpx;
  margin-top: 22rpx;
  display: inline-block;
}

.dialog_h {
  padding-top: 67rpx;
}

.dialog_h .h1 {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  line-height: 56rpx;
  text-align: center;
}

.dialog_h .p {
  font-size: 28rpx;
  color: #666;
  line-height: 40rpx;
  padding-top: 16rpx;
  text-align: center;
}

.dialog_h .dis_btn {
  width: 522rpx;
  height: 80rpx;
  background: #f4f4f4;
  border-radius: 40rpx;
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  line-height: 80rpx;
  text-align: center;
  margin: 46rpx auto 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.dialog_h .dis_btn view {
  font-size: 28rpx;
  color: #4b8dfa;
  line-height: 40rpx;
  padding-left: 34.5rpx;
  background: none;
  border-radius: 0;
  border: 0;
}

.dialog_code .p {
  font-size: 28rpx;
  color: rgba(102, 102, 102, 1);
  line-height: 40rpx;
  padding-top: 16rpx;
}
